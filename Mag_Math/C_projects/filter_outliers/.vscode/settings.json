{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true
    },
    "editor.tabSize": 4,
    "C_Cpp.default.includePath": ["${workspaceFolder}/**", "/path/to/extra/includes"],
    "C_Cpp.default.compilerPath": "/usr/bin/gcc",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.intelliSenseMode": "gcc-x64",
    "files.associations": {
        "stdio.h": "c"
    }
}